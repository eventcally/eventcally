{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "project",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--host", "0.0.0.0"],
      "justMyCode": false,
      "jinja": true,
      "console": "integratedTerminal",
      "consoleName": "Flask"
    },
    {
      "name": "Flask HTTPS",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "project",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--port=443",
        "--no-debugger",
        "--cert=127.0.0.1.crt",
        "--key=127.0.0.1.key"
      ],
      "sudo": true,
      "justMyCode": false,
      "jinja": true
    },
    {
      "name": "Flask CLI",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "project",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": ["cache", "clear-images"],
      "justMyCode": false
    },
    {
      "name": "Python: Aktuelle Datei",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: generate.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/codegen/generate.py",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug Unit Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Celery worker",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": [
        "-A",
        "project.celery",
        "worker",
        "--loglevel=debug",
        "--concurrency=1",
        "--pool",
        "solo"
      ],
      "justMyCode": false,
      "console": "integratedTerminal",
      "consoleName": "Celery worker"
    },
    {
      "name": "Celery beat",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": ["-A", "project.celery", "beat", "--loglevel=debug"],
      "justMyCode": false,
      "console": "integratedTerminal",
      "consoleName": "Celery beat"
    },
    {
      "name": "Gunicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "gunicorn",
      "args": ["-c", "gunicorn.conf.py", "-w", "1", "project:app"],
      "justMyCode": false,
      "console": "integratedTerminal",
      "consoleName": "Gunicorn"
    },
    {
      "name": "pybabel",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/env/bin/pybabel",
      "console": "integratedTerminal",
      "args": [
        "extract",
        "-F",
        "babel.cfg",
        "-o",
        "messages.pot",
        "--sort-output",
        "."
      ],
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${PYTHONPATH}:${workspaceFolder}"
      }
    }
  ],
  "compounds": [
    {
      "name": "Flask/Celery",
      "configurations": ["Flask", "Celery worker"],
      "stopAll": true
    },
    {
      "name": "Flask/Celery/Beat",
      "configurations": ["Flask", "Celery worker", "Celery beat"],
      "stopAll": true
    }
  ]
}
